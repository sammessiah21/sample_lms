<h1>Add Book</h1>
<h3>RECEIVE AND RETURN YOUR BOOKS AT YOUR DOORSTEP</h3>
 <%= form_with scope: :book, url: books_path, local: true do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>